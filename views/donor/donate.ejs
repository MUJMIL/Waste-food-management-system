<main>
	<%- include('../partials/donorSidebar') %>
	
	<div id="main-wrapper">
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Donate</h5>
		</div>
		
		<form action="/donor/donate" method="POST" class="border m-4 my-3 p-4 bg-white rounded-2 shadow">
			<div class="mb-4">
				<label for="food" class="form-label">Donation type</label>

				<select name="donation[donationType]" id="food" class="form-control" required autofocus>
					<option value="0">Select</option>
					<option value="Food">Food</option>
					<option value="Cloths">Cloths</option>
				
				  </select>
				<!-- <input type="text" name="donation[foodType]" class="form-control" id="food" placeholder="Enter food.." required autofocus> -->
			</div>
			
			<div class="row">
				<div class="mb-4 col-sm-6">
					<label for="quantity" class="form-label">Quantity</label>
					<input type="text" name="donation[quantity]" class="form-control" id="quantity"  required>
				</div>
				
				<div class="mb-4 col-sm-6" >
					<label for="time" class="form-label">Time</label>
					<input type="datetime-local" name="donation[donateTime]" class="form-date-input" id="time" required readonnly>
				</div>
			</div>

			<div class="mb-4">
				<label for="agent" class="form-label">Select Agent</label>
				<select  class="form-select" id="agent"  name="donation[agent]">
					<option value="">Select</option>

					<% for(let i=0; i<agents.length; i++) { %>
						<option value="<%= agents[i]._id %>"><%= agents[i].firstName + " " + agents[i].lastName %></option>
					<% } 
					if(agents.length<1){%>
						<option value="nil">NIL</option>


						<%}
					%>
				</select>
			</div>
			
			
			<div class="mb-4">
				<label for="ngo" class="form-label">Select NGO</label>
				<select  class="form-select" id="ngo"  name="donation[ngo]">
					<option value="0">Select</option>

					<% for(let i=0; i<ngos.length; i++) { %>
						<option value="<%= ngos[i]._id %>"><%= ngos[i].firstName + " " + ngos[i].lastName %></option>
						<% } 
						if(ngos.length<1){%>
							<option value="nil">NIL</option>
	
	
							<%}
						%>
				</select>
			</div>
			
			<div class="row">
				<div class="mb-4 col-sm-8">
					<label for="address" class="form-label">Address to collect</label>
					<input type="text" name="donation[address]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.address %>" required>
				</div>
				
				<div class="mb-4 col-sm-4">
					<label for="phone" class="form-label">Phone</label>
					<input type="number" name="donation[phone]" class="form-control" id="phone" placeholder="Enter phone.." value="<%= currentUser.phone %>" required>
				</div>
			</div>
			
			<div class="mb-4">
				<label for="msg" class="form-label">Want to write some message?</label>
				<textarea type="text" name="donation[donorToAdminMsg]" class="form-control" id="msg" placeholder="You can write here some msg.."></textarea>
			</div>
			
			<button type="submit" class="btn w-75 d-block m-auto mt-4">Submit</button>
		</form>
		
	</div>
</main>

